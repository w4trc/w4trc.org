---
import Base from "@/layouts/Base.astro";
import ImageMod from "@/components/ImageMod.astro";
---

<Base
  title="Member Articles & Bios"
  meta_title="W4TRC - Member Articles and Bios"
  description="Spotlight club members, projects, and how-to guides."
>
  <section class="hero-heroimg relative">
    <div aria-hidden="true" class="absolute inset-0 -z-10">
      <ImageMod
        src="/images/patrick-tomasso-Oaqk7qqNh_c-unsplash.jpg"
        alt="Member articles and bios"
        width={1600}
        height={600}
        format="webp"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-linear-to-b from-black/60 via-black/55 to-black/70"></div>
    </div>
    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Member Articles & Bios</h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Feature write-ups from members: station builds, how-to guides, and bios. Replace the placeholders with published posts.
      </p>
    </div>
  </section>

  <section class="section-md">
    <div class="max-w-[1000px] mx-auto px-6 space-y-8">
      <article class="w4-card p-6 space-y-2">
        <h2 class="text-xl font-bold text-white mb-2">Featured Articles</h2>
        <ul class="list-disc list-inside text-sm text-white/80 space-y-2">
          <li><a class="underline" href="#" aria-disabled="true">How I built my first portable HF kit (add link)</a></li>
          <li><a class="underline" href="#" aria-disabled="true">Programming the club repeaters on XYZ radio (add link)</a></li>
          <li><a class="underline" href="#" aria-disabled="true">Mesh node deployment checklist (add link)</a></li>
        </ul>
      </article>

      <article class="w4-card p-6 space-y-2">
        <h2 class="text-xl font-bold text-white mb-2">Member Bios</h2>
        <p class="text-sm text-white/75">
          Add short bios here with headshots or callsigns. Link to full write-ups hosted in the blog or content collection of your choice.
        </p>
        <ul class="list-disc list-inside text-sm text-white/80 space-y-2 mt-2">
          <li><a class="underline" href="#" aria-disabled="true">Jane Smith (K4ABC) bio (add link)</a></li>
          <li><a class="underline" href="#" aria-disabled="true">Chris Walker (N4CWL) bio (add link)</a></li>
        </ul>
      </article>
    </div>
  </section>
</Base>
