---
import Base from "@/layouts/Base.astro";
import ImageMod from "@/components/ImageMod.astro";
---

<Base
  title="Member Articles & Bios"
  meta_title="KARC - Member Articles and Bios"
  description="Spotlight club members, projects, and how-to guides."
>
  <section class="hero-heroimg relative">
    <div aria-hidden="true" class="absolute inset-0 -z-10">
      <ImageMod
        src="/images/patrick-tomasso-Oaqk7qqNh_c-unsplash.jpg"
        alt="Member articles and bios"
        width={1600}
        height={600}
        format="webp"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-linear-to-b from-black/60 via-black/55 to-black/70"></div>
    </div>
    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Member Articles & Bios</h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Feature write-ups from members: station builds, how-to guides, and bios.
      </p>
    </div>
  </section>

  <section class="section-md">
    <div class="max-w-[1000px] mx-auto px-6 space-y-8">
      <article class="w4-card p-6 space-y-2">
        <h2 class="text-xl font-bold text-white mb-2">Member Articles</h2>
        <ul class="list-disc list-inside text-sm text-white/80 space-y-2">
          <li><a class="underline" href="/files/member-articles/AM-ON-FM-THEN-NOW-Final.pdf" aria-disabled="true">"“AM ON FM” ---- THEN & NOW" by George DeVault (W3KPT)</a></li>
          <li><a class="underline" href="/files/member-articles/Hiking-Through.pdf" aria-disabled="true">"Hiking Through" by Larry Dale (KD4FTN)</a></li>
          <li><a class="underline" href="/files/member-articles/QRP-In-The-Park.pdf" aria-disabled="true">QRP in the Park by John Williams (KJ4ZFK)</a></li>
          <li><a class="underline" href="/files/member-articles/Quest-for-Goat.pdf" aria-disabled="true">Quest for GOAT by John Williams (KJ4ZFK)</a></li>
          <li><a class="underline" href="/files/member-articles/Mike-Jackson-Article.pdf" aria-disabled="true">How Illness Brought Me to Ham Radio by Mike Jackson (W4MKJI)</a></li>
        </ul>
      </article>

      <article class="w4-card p-6 space-y-2">
        <h2 class="text-xl font-bold text-white mb-2">Member Bios</h2>
        <ul class="list-disc list-inside text-sm text-white/80 space-y-2 mt-2">
          <li><a class="underline" href="/files/bios/Bob-Biography.pdf" aria-disabled="true">Robert "Bob" David Watts </a></li>
          <li><a class="underline" href="/files/bios/David-Stevens-Bio.pdf" aria-disabled="true">David Stevens (WB4DES)</a></li>
          <li><a class="underline" href="/files/bios/George-DeVault.pdf" aria-disabled="true">George DeVault (W3KPT)</a></li>
          <li><a class="underline" href="/files/bios/K4DR-bio.pdf" aria-disabled="true">David A. Rotenberry (K4DR)</a></li>
          <li><a class="underline" href="/files/bios/Ken-Klotz.pdf" aria-disabled="true">Ken Klotz (W4IJK)</a></li>
          <li><a class="underline" href="/files/bios/Mark-DeBord-BIO.pdf" aria-disabled="true">Mark-DeBord (KA4ICK)</a></li>
          <li><a class="underline" href="/files/bios/Mike-Betty-Bio.pdf" aria-disabled="true">Mike (W4MKJI) and Betty (KI4PWN) Jackson</a></li>
          <li><a class="underline" href="/files/bios/Neil-Weber-Bio.pdf" aria-disabled="true">Neil Weber (KM4NWH)</a></li>
          <li><a class="underline" href="/files/bios/Rick-Johnson-Bio.pdf" aria-disabled="true">Rick Johnson (WB4RLJ)</a></li>
        </ul>
      </article>
    </div>
  </section>
</Base>
