---
import Base from "@/layouts/Base.astro";
import ImageMod from "@/components/ImageMod.astro";
---

<Base
  title="Documents & Downloads"
  meta_title="KARC - Documents & Downloads"
  description="Grab club forms, reference sheets, and other frequently requested documents."
>
  <section class="hero-heroimg relative">
    <div aria-hidden="true" class="absolute inset-0 -z-10">
      <ImageMod
        src="/images/wesley-tingey-snNHKZ-mGfE-unsplash.jpg"
        alt="Club documents and downloads"
        width={1600}
        height={600}
        format="webp"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-linear-to-b from-black/60 via-black/55 to-black/70"></div>
    </div>
    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Documents & Downloads</h1>
    </div>
  </section>

  <section class="section-md">
    <div class="max-w-[1000px] mx-auto px-6 space-y-8">
      <article class="w4-card p-6 space-y-2">
        <h2 class="text-xl font-bold text-white mb-2">Club Forms</h2>
        <ul class="list-disc list-inside text-sm text-white/80 space-y-2">
          <li><a class="underline" href="/files/KARC-Constitution-By-Laws_20180412.pdf" aria-disabled="true">Club Constitution and By-Laws (Revision dated 12 April 2018)</a></li>
         
        </ul>
      </article>

      <article class="w4-card p-6 space-y-2">
        <h2 class="text-xl font-bold text-white mb-2">Operating Resources</h2>
        <ul class="list-disc list-inside text-sm text-white/80 space-y-2">
          <li><a class="underline" href="/files/KARC-Net-Script-20190410.pdf" aria-disabled="true">Net script</a></li>
        </ul>
      </article>

      <article class="w4-card p-6 space-y-2">
        <h2 class="text-xl font-bold text-white mb-2">Meeting Resources</h2>
        <ul class="list-disc list-inside text-sm text-white/80 space-y-2">
          <li><a class="underline" href="#" aria-disabled="true">Club logo pack (add link)</a></li>
          <li><a class="underline" href="/files/KARC Sign In Sheet.pdf" aria-disabled="true">Event sign-in sheet</a></li>
        </ul>
      </article>
    </div>
  </section>
</Base>
