---
import Base from "@/layouts/Base.astro";
import newsletters from "@/data/newsletters.json";

const issues = [...newsletters].sort(
  (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()
);

const fmtDate = (iso: string) =>
  new Date(iso + (iso.includes("T") ? "" : "T00:00:00")).toLocaleDateString("en-US", {
    month: "long",
    year: "numeric",
  });
---

<Base
  title="Newsletter"
  meta_title="W4TRC - Newsletter"
  description="Club newsletter archive with quick links to recent issues."
>
  <section class="hero-heroimg relative">
    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Newsletter</h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Catch up on recent issues or download past editions. Add new releases in <code>src/data/newsletters.json</code>.
      </p>
    </div>
  </section>

  <section class="section-md">
    <div class="max-w-[1100px] mx-auto px-6">
      <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
        {issues.map((issue) => (
          <article class="w4-card p-6 flex flex-col gap-3">
            <div class="flex items-start justify-between gap-3">
              <div>
                <p class="text-xs uppercase tracking-wide text-white/60">Issue</p>
                <h2 class="text-xl font-bold text-white leading-snug">{issue.issue}</h2>
              </div>
              <span class="text-xs px-3 py-1 rounded-full bg-white/10 text-white/80 border border-white/15 whitespace-nowrap flex-shrink-0">
                {fmtDate(issue.date)}
              </span>
            </div>
            {issue.summary && <p class="text-sm text-white/75">{issue.summary}</p>}
            {issue.link ? (
              <a class="button inline-flex items-center justify-center px-3 py-2 text-sm font-semibold mt-auto" href={issue.link} target="_blank" rel="noreferrer">
                Download PDF
              </a>
            ) : (
              <p class="text-xs text-white/50 mt-auto">Add a link for this issue in newsletters.json</p>
            )}
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>
