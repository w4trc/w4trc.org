---
import Base from "@/layouts/Base.astro";
import minutes from "@/data/minutes.json";

const entries = [...minutes].sort(
  (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()
);

const fmtDate = (iso: string) =>
  new Date(iso + (iso.includes("T") ? "" : "T00:00:00")).toLocaleDateString("en-US", {
    month: "long",
    day: "numeric",
    year: "numeric",
  });
---

<Base
  title="Meeting Minutes"
  meta_title="W4TRC - Meeting Minutes"
  description="Archived W4TRC meeting minutes, ready for quick reference and download."
>
  <section class="hero-heroimg relative">
    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Meeting Minutes</h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Browse recent club meeting minutes. Add new entries by updating <code>src/data/minutes.json</code>.
      </p>
    </div>
  </section>

  <section class="section-md">
    <div class="max-w-[1100px] mx-auto px-6">
      <div class="grid gap-6 md:grid-cols-2">
        {entries.map((item) => (
          <article class="w4-card p-6 flex flex-col gap-3">
            <div class="flex items-start justify-between gap-3">
              <div>
                <p class="text-xs uppercase tracking-wide text-white/60">Meeting</p>
                <h2 class="text-xl font-bold text-white leading-snug">{item.title}</h2>
              </div>
              <span class="text-xs px-3 py-1 rounded-full bg-white/10 text-white/80 border border-white/15 whitespace-nowrap flex-shrink-0">
                {fmtDate(item.date)}
              </span>
            </div>
            {item.summary && <p class="text-sm text-white/75">{item.summary}</p>}
            {item.link ? (
              <a class="button inline-flex items-center justify-center px-3 py-2 text-sm font-semibold mt-auto" href={item.link} target="_blank" rel="noreferrer">
                View Minutes
              </a>
            ) : (
              <p class="text-xs text-white/50 mt-auto">Add a link for this entry in minutes.json</p>
            )}
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>
