---
import Base from "@/layouts/Base.astro";
import silentKeys from "@/data/silent-keys.json";

const entries = [...silentKeys].sort((a, b) => a.name.localeCompare(b.name));
---

<Base
  title="Silent Keys"
  meta_title="W4TRC - Silent Keys"
  description="Honoring members and friends of W4TRC who have become silent keys."
>
  <section class="hero-heroimg relative">
    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Silent Keys</h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Remembering the hams who shaped our club. Update entries in <code>src/data/silent-keys.json</code>.
      </p>
    </div>
  </section>

  <section class="section-md">
    <div class="max-w-[1000px] mx-auto px-6">
      <div class="grid gap-5 md:grid-cols-2">
        {entries.map((person) => (
          <article class="w4-card p-5 flex flex-col gap-2">
            <div class="flex items-center justify-between gap-3">
              <div>
                <p class="text-xs uppercase tracking-wide text-white/60">{person.callsign}</p>
                <h2 class="text-xl font-bold text-white leading-snug">{person.name}</h2>
              </div>
              {person.years && (
                <span class="text-xs px-3 py-1 rounded-full bg-white/10 text-white/80 border border-white/15 whitespace-nowrap flex-shrink-0">
                  {person.years}
                </span>
              )}
            </div>
            {person.description && <p class="text-sm text-white/75">{person.description}</p>}
          </article>
        ))}
      </div>
    </div>
  </section>
</Base>
