---
import Base from "@/layouts/Base.astro";
import ImageMod from "@/components/ImageMod.astro";
import { getCollection } from "astro:content";

const entries = (await getCollection("silentKeys"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => (a.data.weight ?? 0) - (b.data.weight ?? 0) || a.data.name.localeCompare(b.data.name));
---

<Base
  title="Silent Keys"
  meta_title="KARC - Silent Keys"
  description="Honoring members and friends of W4TRC who have become silent keys."
>
  <section class="hero-heroimg relative">
    <div aria-hidden="true" class="absolute inset-0 -z-10">
      <ImageMod
        src="/images/david-tomaseti-AaZlf5FgUws-unsplash.jpg"
        alt="Silent Keys memorial"
        width={1600}
        height={600}
        format="webp"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-linear-to-b from-black/60 via-black/55 to-black/70"></div>
    </div>
    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Silent Keys</h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        Remembering the hams who shaped our club. Their legacies live on in our hearts and airwaves.
      </p>
    </div>
  </section>

  <section class="section-md">
    <div class="max-w-[1000px] mx-auto px-6">
      <div class="grid gap-6 md:grid-cols-2">
        {entries.map((person) => (
          <article class="w4-card p-6 flex flex-col gap-2">
            <div class="flex items-center justify-between gap-3">
              <div>
                <p class="text-xs uppercase tracking-wide text-white/60">{person.data.callsign}</p>
                <h2 class="text-xl font-bold text-white leading-snug">{person.data.name}</h2>
              </div>
              {person.data.years && (
                <span class="text-xs px-3 py-1 rounded-full bg-white/10 text-white/80 border border-white/15 whitespace-nowrap shrink-0">
                  {person.data.years}
                </span>
              )}
            </div>
            {person.data.description && <p class="text-sm text-white/75">{person.data.description}</p>}
            {person.data.obituaryUrl && (
              <a class="text-(--w4-accent) text-sm font-semibold hover:underline underline-offset-4" href={person.data.obituaryUrl} target="_blank" rel="noreferrer">
                Obituary / Memorial â†’
              </a>
            )}
          </article>
        ))}
      </div>

      <div class="w4-card p-6 mt-8 text-center">
        <p class="text-white/80 text-sm">
          To submit a silent key or provide more information, email{" "}
          <a class="text-(--w4-accent) font-semibold hover:underline underline-offset-4" href="mailto:contact@w4trc.org">
            contact@w4trc.org
          </a>{" "}
          or use our <a class="text-(--w4-accent) font-semibold hover:underline underline-offset-4" href="/contact/">contact form</a>.
        </p>
      </div>
    </div>
  </section>
</Base>
