---
import { getCollection } from "astro:content";
const events = await getCollection("events");
---

<section class="container py-12">
  <h1 class="text-3xl font-bold mb-8">Upcoming Events</h1>

  <ul class="grid gap-6">
    {events.map((event) => (
      <li class="p-6 rounded-lg bg-slate-800 shadow-lg">
        <a href={`/events/${event.slug}/`} class="block">
          <h2 class="text-2xl font-semibold mb-2">{event.data.title}</h2>
          <p class="text-gray-400">{event.data.summary}</p>
        </a>
      </li>
    ))}
  </ul>
</section>
