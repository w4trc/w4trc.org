---
import Base from "@/layouts/Base.astro";
import { getCollection } from "astro:content";

const meetingCover = "/images/clubmeetings2025.jpg";

const eventsRaw = await getCollection("events");
const meetingsRaw = await getCollection("meetings");

const normalizeEvent = (e: any) => ({
  type: "Event" as const,
  title: e.data.title,
  date: e.data.date as string,
  endDate: (e.data as any).endDate ?? null,
  location: e.data.location ?? "",
  summary: e.data.summary ?? "",
  cover: (e.data as any).cover ?? "",
  link: `/events/${e.slug}/`,
});

const normalizeMeeting = (m: any) => {
  const dt = m.data.datetime as any;
  const date = dt instanceof Date ? dt.toISOString() : String(dt);
  return {
    type: "Meeting" as const,
    title: m.data.title ?? "Club Meeting",
    date,
    endDate: (m.data as any).endDate ?? null,
    location: m.data.location ?? "",
    summary: m.data.desc ?? m.data.topic ?? "",
    cover: meetingCover,
    link: "/calendar/",
  };
};

const combined = [
  ...eventsRaw.map(normalizeEvent),
  ...meetingsRaw.filter((m) => !m.data.draft && m.data.datetime).map(normalizeMeeting),
].filter((item) => {
  const d = new Date(item.date);
  return !Number.isNaN(d.getTime());
});

combined.sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());

const now = new Date();
const upcoming = combined.filter((e) => new Date(e.date).getTime() >= now.getTime());
const past = combined.filter((e) => new Date(e.date).getTime() < now.getTime()).reverse();

const fmtDate = (iso: string) =>
  new Date(iso).toLocaleDateString(undefined, {
    weekday: "short",
    month: "short",
    day: "numeric",
    year: "numeric",
  });
const fmtTime = (iso: string) =>
  new Date(iso).toLocaleTimeString(undefined, { hour: "numeric", minute: "2-digit" });
---

<Base
  title="Events"
  meta_title="KARC - Events"
  description="Club meetings, test sessions, and special activities."
  image={undefined}
>
  <!-- Single outer section to avoid alternating backgrounds from global CSS -->
  <section class="section-md">
    <div class="max-w-[1100px] mx-auto px-6 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Upcoming Events</h1>
      <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
        Club meetings, test sessions, and special activities.
      </p>

      <!-- Centered divider to match single page -->
      <div class="relative flex justify-center mb-10">
        <span class="inline-block h-1 w-12 bg-[var(--w4-accent)] rounded-full"></span>
      </div>

      {upcoming.length > 0 ? (
        <ul class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 text-left">
          {upcoming.map((item) => (
            <li class="w4-card hover:translate-y-[-2px] transition-transform">
              {item.type === "Event" ? (
                <a href={item.link} class="block p-6 h-full">
                  {item.cover && (
                    <img
                      src={item.cover}
                      alt={item.title}
                      class="rounded-md mb-4 w-full aspect-video object-cover"
                      loading="lazy"
                      decoding="async"
                    />
                  )}

                  <h2 class="text-2xl font-bold text-white mb-2">
                    {item.title}
                  </h2>

                  <p class="text-gray-400 text-sm mb-3">
                    {fmtDate(item.date)}  {fmtTime(item.date)}
                    {item.location ? `  ${item.location}` : ""}
                  </p>

                  {item.summary && (
                    <p class="text-gray-300 mb-3">{item.summary}</p>
                  )}

                  <span class="inline-flex items-center gap-1 text-(--w4-accent) font-semibold text-sm">
                    More info <span aria-hidden="true">→</span>
                  </span>
                </a>
              ) : (
                <div class="block p-6 h-full">
                  {item.cover && (
                    <img
                      src={item.cover}
                      alt={item.title}
                      class="rounded-md mb-4 w-full aspect-video object-cover"
                      loading="lazy"
                      decoding="async"
                    />
                  )}

                  <h2 class="text-2xl font-bold text-white mb-2">
                    {item.title}
                  </h2>

                  <p class="text-gray-400 text-sm mb-3">
                    {fmtDate(item.date)}  {fmtTime(item.date)}
                    {item.location ? `  ${item.location}` : ""}
                  </p>

                  {item.summary && (
                    <p class="text-gray-300">{item.summary}</p>
                  )}
                </div>
              )}
            </li>
          ))}
        </ul>
      ) : (
        <p class="text-gray-400 text-center">No upcoming events listed yet.</p>
      )}

      {past.length > 0 && (
        <>
          <div class="relative flex justify-center my-12">
            <span class="inline-block h-1 w-12 bg-[var(--w4-accent)] rounded-full"></span>
          </div>
          <h2 class="text-2xl font-bold text-white mb-6">Past Events</h2>
          <ul class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 text-left">
            {past.map((item) => (
              <li class="w4-card hover:translate-y-[-2px] transition-transform">
                {item.type === "Event" ? (
                  <a href={item.link} class="block p-6 h-full">
                    {item.cover && (
                      <img
                        src={item.cover}
                        alt={item.title}
                        class="rounded-md mb-4 w-full aspect-video object-cover opacity-80"
                        loading="lazy"
                        decoding="async"
                      />
                    )}

                    <h3 class="text-xl font-semibold text-white mb-2">
                      {item.title}
                    </h3>

                    <p class="text-gray-400 text-sm mb-3">
                      {fmtDate(item.date)}  {fmtTime(item.date)}
                      {item.location ? `  ${item.location}` : ""}
                    </p>

                    <span class="inline-flex items-center gap-1 text-(--w4-accent) font-semibold text-sm">
                      More info <span aria-hidden="true">→</span>
                    </span>
                  </a>
                ) : (
                  <div class="block p-6 h-full">
                    {item.cover && (
                      <img
                        src={item.cover}
                        alt={item.title}
                        class="rounded-md mb-4 w-full aspect-video object-cover opacity-80"
                        loading="lazy"
                        decoding="async"
                      />
                    )}

                    <h3 class="text-xl font-semibold text-white mb-2">
                      {item.title}
                    </h3>

                    <p class="text-gray-400 text-sm">
                      {fmtDate(item.date)}  {fmtTime(item.date)}
                      {item.location ? `  ${item.location}` : ""}
                    </p>
                  </div>
                )}
              </li>
            ))}
          </ul>
        </>
      )}
    </div>
  </section>
</Base>

<style>
  /* Card polish (mirrors your theme tokens) */
  .w4-card {
    background: var(--w4-surface);
    border: 1px solid var(--w4-border);
    border-radius: 1rem;
    box-shadow: var(--w4-shadow);
    transition: transform .16s ease, box-shadow .16s ease, border-color .16s ease;
  }
  .w4-card:hover {
    box-shadow: var(--w4-shadow-lg);
    border-color: rgba(255,255,255,.18);
  }
</style>
