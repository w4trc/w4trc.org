---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import repeaters from "@/data/repeaters.json";

const clubOnAir = repeaters.clubOnAir ?? [];
const comingSoon = repeaters.comingSoon ?? [];
const areaRepeaters = repeaters.areaRepeaters ?? [];
const areaNets = repeaters.areaNets ?? [];
const heroImage = "/images/IMG_2781.jpg";
const historyImage = "/images/winterfieldday.png";
---

<Base
  title="Repeaters & Nets"
  meta_title="Repeaters & Nets"
  description="Club repeater information, nearby machines, and area net schedule."
>
  <!-- HERO -->
  <section class="hero-heroimg relative">
    <div aria-hidden="true" class="absolute inset-0 -z-10">
      <ImageMod
        src={heroImage}
        alt="Club radio gear"
        width={1600}
        height={600}
        format="webp"
        class="w-full h-full object-cover opacity-50"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/55 to-black/70"></div>
    </div>

    <div class="container mx-auto px-6 py-16 text-center">
      <h1 class="text-4xl font-extrabold mb-4">Repeaters & Area Nets</h1>
      <p class="text-lg text-white/70 max-w-2xl mx-auto">
        Information about the W4TRC club repeaters, nearby machines, and local/regional nets.
      </p>
    </div>
  </section>

  <!-- CLUB REPEATERS -->
  <section class="section-md">
    <div class="max-w-[1200px] mx-auto px-6 space-y-12">
      <div>
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 mb-4">
          <h2 class="section-title mb-0">Club Repeaters</h2>
        </div>

        {clubOnAir.length > 0 ? (
          <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
            {clubOnAir.map((r) => (
              <div class="w4-card h-full p-5 flex flex-col gap-2">
                <div class="flex items-start justify-between gap-2">
                  <div>
                    <p class="text-xs uppercase tracking-wide text-white/60">{r.callsign}</p>
                    <h3 class="text-xl font-bold text-white leading-tight">{r.name}</h3>
                  </div>
                  <span class="text-xs px-3 py-1 rounded-full bg-emerald-500/15 text-emerald-200 border border-emerald-500/30 whitespace-nowrap flex-shrink-0">
                    On Air
                  </span>
                </div>
                <p class="text-sm font-semibold text-white">{r.frequency}</p>
                {r.mode && <p class="text-sm text-white/70">Mode: {r.mode}</p>}
                {r.location && <p class="text-sm text-white/70">Site: {r.location}</p>}
                {Array.isArray(r.features) && r.features.length > 0 && (
                  <ul class="mt-2 space-y-1 text-sm text-white/70 list-disc list-inside">
                    {r.features.map((item) => (
                      <li>{item}</li>
                    ))}
                  </ul>
                )}
                {r.notes && <p class="text-sm text-white/70">{r.notes}</p>}
              </div>
            ))}
          </div>
        ) : (
          <div class="w4-card p-5 text-sm text-white/70">Add your three on-air machines to clubOnAir in src/data/repeaters.json.</div>
        )}

        {comingSoon.length > 0 && (
          <div class="mt-10">
            <h3 class="text-lg font-semibold text-white mb-3">Coming Soon</h3>
            <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
              {comingSoon.map((r) => (
                <div class="w4-card p-4 flex flex-col gap-2">
                  <div class="flex items-start justify-between gap-2">
                    <div>
                      <p class="text-xs uppercase tracking-wide text-white/60">{r.callsign}</p>
                      <h4 class="text-base font-semibold text-white leading-tight">{r.name}</h4>
                    </div>
                    <span class="text-xs px-3 py-1 rounded-full bg-amber-500/15 text-amber-200 border border-amber-500/30">
                      Planned
                    </span>
                  </div>
                  {r.frequency && <p class="text-sm font-semibold text-white">{r.frequency}</p>}
                  {r.mode && <p class="text-sm text-white/70">Mode: {r.mode}</p>}
                  {r.location && <p class="text-sm text-white/70">Planned site: {r.location}</p>}
                  {r.notes && <p class="text-sm text-white/70">{r.notes}</p>}
                </div>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- REPEATER HISTORY TEASER -->
      <div>
        <div class="w4-card overflow-hidden grid gap-0 lg:grid-cols-[2fr_1fr]">
          <div class="p-6 lg:p-8">
            <p class="text-sm uppercase tracking-[0.12em] text-[var(--w4-accent)] mb-2">
              Repeater History
            </p>
            <h2 class="text-2xl font-bold text-white mb-3">How the W4TRC machines came to be</h2>
            <p class="text-white/75">
              From the first club machine on Bays Mountain to today’s multi-site coverage, read the story,
              upgrades, and people who built the system we rely on.
            </p>
            <a
              class="inline-flex items-center gap-2 text-[var(--w4-accent)] font-semibold mt-5 hover:underline underline-offset-4"
              href="/repeaters/history/"
            >
              Read the full history
              <span aria-hidden="true">→</span>
            </a>
          </div>
          <div class="relative min-h-[200px]">
            <ImageMod
              src={historyImage}
              alt="Field day tent and radio gear"
              width={800}
              height={500}
              format="webp"
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent lg:bg-none"></div>
          </div>
        </div>
      </div>

      <!-- AREA REPEATERS TABLE -->
      <div>
        <h2 class="section-title">Area Repeaters</h2>
        {areaRepeaters.length > 0 ? (
          <div class="w4-card overflow-x-auto p-0">
            <table class="min-w-full text-left">
              <thead class="text-sm text-white/60">
                <tr>
                  <th class="px-5 py-3">Location</th>
                  <th class="px-5 py-3">Frequency / Tone</th>
                  <th class="px-5 py-3">Mode</th>
                  <th class="px-5 py-3">Callsign</th>
                  <th class="px-5 py-3">Notes</th>
                </tr>
              </thead>
              <tbody class="text-sm text-white/80">
                {areaRepeaters.map((row) => (
                  <tr class="border-t border-white/5">
                    <td class="px-5 py-3 whitespace-nowrap">{row.location}</td>
                    <td class="px-5 py-3 whitespace-nowrap">{row.frequency}</td>
                    <td class="px-5 py-3 whitespace-nowrap">{row.mode}</td>
                    <td class="px-5 py-3 whitespace-nowrap">{row.callsign}</td>
                    <td class="px-5 py-3">{row.notes}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="w4-card p-5 text-sm text-white/70">
            Add nearby machines to areaRepeaters in src/data/repeaters.json.
          </div>
        )}
      </div>

      <!-- AREA NETS TABLE -->
      <div>
        <h2 class="section-title">Area Nets</h2>
        {areaNets.length > 0 ? (
          <div class="w4-card overflow-x-auto p-0">
            <table class="min-w-full text-left">
              <thead class="text-sm text-white/60">
                <tr>
                  <th class="px-5 py-3">Net</th>
                  <th class="px-5 py-3">Day</th>
                  <th class="px-5 py-3">Time</th>
                  <th class="px-5 py-3">Frequency</th>
                  <th class="px-5 py-3">Mode</th>
                  <th class="px-5 py-3">Notes</th>
                </tr>
              </thead>
              <tbody class="text-sm text-white/80">
                {areaNets.map((net) => (
                  <tr class="border-t border-white/5">
                    <td class="px-5 py-3 whitespace-nowrap">{net.name}</td>
                    <td class="px-5 py-3 whitespace-nowrap">{net.day}</td>
                    <td class="px-5 py-3 whitespace-nowrap">{net.time_local}</td>
                    <td class="px-5 py-3 whitespace-nowrap">{net.frequency}</td>
                    <td class="px-5 py-3 whitespace-nowrap">{net.mode}</td>
                    <td class="px-5 py-3">{net.notes}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="w4-card p-5 text-sm text-white/70">
            Add local/regional nets to areaNets in src/data/repeaters.json.
          </div>
        )}
        <p class="text-sm text-white/60 mt-3">
          Looking for the W4TRC weekly net details? See <a class="underline" href="/activities/nets/">the Nets page</a>.
        </p>
      </div>
    </div>
  </section>
</Base>
